<div>
  <div class="col-md-3">
    <div>Notebooks</div>
    <div>
      title: {{input id="new-notebook-title" class="text-input" placeholder="Enter title" value=title}}
      <button {{action 'addNotebook' }} class="btn btn-primary">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Add
      </button>
    </div>
    <div>
      <ul>
        {{#each model as |notebook|}}
          <li>
            {{#link-to 'notebooks.notes' notebook.id }}
              {{notebook.title}}
            {{/link-to}}
          </li>
        {{else}}
          <div>No notebooks found</div>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="col-md-9">{{outlet}}</div>
</div>

